@model SnuggleDestructionBangazonWorkforce.Models.ViewModels.EmployeeCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Add an employee</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Employee.FirstName" class="control-label"></label>
                <input asp-for="Employee.FirstName" class="form-control" />
                <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.LastName" class="control-label"></label>
                <input asp-for="Employee.LastName" class="form-control" />
                <span asp-validation-for="Employee.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.IsSupervisor" class="control-label"></label>
                <input asp-for="Employee.IsSupervisor" class="form-control" />
                <span asp-validation-for="Employee.IsSupervisor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Departments" class="control-label"></label>
                <select asp-for="Employee.DepartmentId" asp-items="@Model.Departments"></select>
                <span asp-validation-for="Employee.DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section  Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}

