@model IEnumerable<SnuggleDestructionBangazonWorkforce.Models.Computer>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Computers" asp-action="SearchComputers">
    <p>
        Search: <input type="text" name="SearchString">
        <input type="submit" value="Search" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DecomissionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Make)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PurchaseDate)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.DecomissionDate)*@
                @(item.DecomissionDate == default(DateTime) ? "Active" : item.DecomissionDate.ToShortDateString())
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Employee)*@
                @(item.Employee == null ? "No Assigned Employee" : item.Employee.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Make)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer)
            </td>
            <td>

                @Html.ActionLink("Details", "Details", new { id = item.Id }) 
                @if (item.Employee == null)
                {
                <span>|</span>
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }) 
                }
            </td>
        </tr>
}
    </tbody>
</table>
